{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/components/*": [
                "components/*"
            ],
            "@/utils/*": [
                "utils/*"
            ],
            "@/types/*": [
                "types/*"
            ],
            "@/public/*": [
                "public/*"
            ],
            "@/pages/*": [
                "pages/*"
            ],
            "@/context/*": [
                "context/*"
            ],
            "@/data/*": [
                "data/*"
            ],
            "@/hooks/*": [
                "hooks/*"
            ],
            "@/styles/*": [
                "styles/*"
            ],
            "@/graphql/*": [
                "graphql/*"
            ],
            "@/config/*": [
                "config/*"
            ]
        },
        "target": "es5",
        "lib": [
            "dom",
            "dom.iterable",
            "esnext"
        ],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "strictNullChecks": false
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}